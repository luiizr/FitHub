{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fit-hub/adapters": ["libs/adapters/src/index.ts"],
      "@fit-hub/backendAdapters": ["libs/backendAdapters/src/index.ts"],
      "@fit-hub/core": ["libs/core/src/index.ts"],
      "@fit-hub/services": ["libs/services/src/index.ts"],
      "@fit-hub/shareds": ["libs/shareds/src/index.ts"],
      "@fit-hub/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
